#!/usr/bin/env node
var fs = require('fs'),
  clc = require('cli-color'),
  args = process.argv.slice(2),
  command = args.shift();

/*log*/
var log = {};
log.bold = function(info){
  console.log(clc.bold(info));
}

switch (command){
  case '-v':
  case '--version':
    var version = require('../package.json').version;
    log.bold(version);
    break;
  case '-h':
  case '-help':
    log.bold(require('../lib/cli/help')());
    break;
  case 'server':
    if (args[0] === '-w'){
      require('../lib/cli/watch')();
    }
    require('../lib/cli/server')();
    break;

  case 'deploy':
    require('../lib/cli/deploy')();
    break;

  case 'init':
    require('../lib/cli/init')();
    break;

  case 'generate':
  case 'g':
    require('../lib/cli/generate')();
    break;

  default:
    require('../lib/cli/help')();
    break;
}